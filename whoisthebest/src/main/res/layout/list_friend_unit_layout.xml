<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_friend_unit_layout"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:padding="5dp">

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/imgFavorites"
        android:adjustViewBounds="true"
        android:maxWidth="40dp"
        android:maxHeight="40dp"
        android:scaleType="fitXY"
        android:src="@android:drawable/btn_star_big_on"
        android:visibility="gone"
        android:layout_centerVertical="true"/>


    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/imgCheck"
        android:adjustViewBounds="true"
        android:maxWidth="30dp"
        android:maxHeight="30dp"
        android:scaleType="fitXY"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/icone_check"/>

    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:id="@+id/addCheck"
        android:adjustViewBounds="true"
        android:maxWidth="35dp"
        android:maxHeight="35dp"
        android:scaleType="fitXY"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/imgCheck"
        android:layout_toStartOf="@+id/imgCheck" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pierre-Alexandre Turmel"
        android:id="@+id/friendName"
        android:textSize="22dp"
        android:textColor="@color/colorNoir"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/imgFavorites"
        android:layout_toEndOf="@+id/imgFavorites"
        android:padding="5dp"
        android:layout_marginLeft="5dp"/>


</RelativeLayout>

